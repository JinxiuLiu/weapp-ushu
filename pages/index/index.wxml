                    <icon type="clear" size="14"></icon>
                </view>
            </view>
        </view>
    </view>
</view>
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true" class="marginBottom">
