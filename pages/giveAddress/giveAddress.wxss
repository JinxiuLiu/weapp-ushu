    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    color: #fff;
    background-color: #ff4444;
    position: fixed;
    bottom: 0;
}

.me-give {
    width: 100%;
    display: flex;
    justify-content: space-around;
    -ms-align-items: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #f0f0f0;
}

.me-give .logistics,
.me-give .feedback {
    width: 50%;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    background-color: #fff;
    color: #666;
}

.me-give .feedback {
    background-color: #ff4444;
    color: #fff;
}