.addAddress {
    border-top: 1rpx solid #dcdcdc;
    margin-bottom: 20rpx;
}

.hidden {
    display: none;
}

.weui-cell {
    background: #fff;
}

.weui-cell::before {
    border-top: 1rpx solid #f0f0f0;
}

.weui-cell .weui-label {
    width: 130rpx;
    font-size: 14px;
    color: #333;
}

.weui-input {
    height: 98rpx;
    line-height: 98rpx;
    max-height: 98rpx;
    font-size: 14px;
    color: #333;
}

.weui-select_in-select-after {
    height: 98rpx;
    line-height: 98rpx;
    max-height: 98rpx;
    font-size: 14px;
    color: #999;
