.cart {
	margin-bottom: 117rpx;
}

.cart .cart-title {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	height: 84rpx;
	padding: 0 24rpx;
	background: #ff4444;
	font-size: 14px;
	color: #fff;
}

.cart .cart-item {
	background: #fff;
	margin-bottom: 20rpx;
}

.cart .cart-item .title {
	height: 59rpx;
	line-height: 59rpx;
	padding-left: 80rpx;
	font-size: 12px;
	color: #999;
	border-bottom: 1rpx solid #dcdcdc;
}

.weui-cell {
	padding: 0 20rpx;
}

.weui-cell::before {
	left: 80rpx;
}

.item-book {
	display: flex;
	justify-content: space-between;
	height: 179rpx;
	padding: 30rpx 12rpx 30rpx 0;
	border-bottom: 3rpx solid #ededed;
}

.item-book:last-of-type {
	border-bottom: none;
}

.item-book .book-left {
	display: flex;
	align-items: center;
}

.book-left .left-image {
	width: 140rpx;
	height: 177rpx;
}

.book-left .left-image image {
	width: 100%;
	height: 100%;
}

.book-left .left-text {
	display: flex;
	flex-direction: column;
	align-self: flex-end;
	height: 100%;
	padding-left: 20rpx;
}

.book-left .left-text .name {
	max-width:90%;
	font-size: 14px;
}

.book-left .left-text .work-name {
	font-size: 12px;
	color: #999;
}

.item-book .book-right {
	display: flex;
	justify-content: space-between;
	align-items: flex-end;
	font-size: 14px;
	margin-top: 10rpx;
}

.item-book .book-right .number {
	color: #999;
}

.cart-bottom {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	height: 97rpx;
	padding-left: 28rpx;
	border-bottom: 1rpx solid #f0f0f0;
	background: #fff;
	position: fixed;
	bottom: 0;
}

.cart-bottom .total {
	font-size: 14px;
	padding-right: 30rpx;
}

.cart-bottom .total .color-red {
	font-size: 17px;
}

.cart-bottom .all {
	width: 100rpx;
	position: absolute;
	bottom: 0;
	font-size: 14px;
}

.cart-bottom .radio {
	position: relative;
}

.cart-bottom .radio {
	position: relative;
}

.cart-bottom .give,
.cart-bottom .settlement {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 180rpx;
	height: 97rpx;
	font-size: 15px;
	color: #fff;
	background: #ff711b;
}

.cart-bottom .settlement {
	background: #ff4444;
}

.bottom-right {
	display: flex;
	align-items: center;
}

/* 编辑-加减 */
.modified {
	display: flex;
	justify-content: center;
	align-items: center;
	padding-left: 149rpx;
}

.modified .modified-item {
	display: flex;
	height: 75rpx;
	line-height: 75rpx;
	border: 1rpx solid #ccc;
	color: #a0a0a0;
}

.modified .modified-item input {
	height: 75rpx;
	line-height: 75rpx;
	width: 67rpx;
	text-align: center;
	border-left: 1rpx solid #ccc;
	border-right: 1rpx solid #ccc;
}

.modified .modified-item .minus,
.modified .modified-item .add {
	height: 75rpx;
	line-height: 75rpx;
	width: 73rpx;
	text-align: center;
	background: #f5f5f5;
} 

.bottom-del {
	width: 380rpx;
	height: 97rpx;
	line-height: 97rpx;
	background: #ff4444;
	text-align: center;
	color: #fff;
}