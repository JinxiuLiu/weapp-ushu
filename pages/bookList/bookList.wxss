.bookList {
	background: #fff;
	margin-bottom: 27rpx;
}

.bookList-founder {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 42rpx 40rpx 60rpx;
}

.founder-info {
	display: flex;
}

.founder-info .founder-avatar {
	display: inline-block;
	width: 80rpx;
	height: 80rpx
}

.founder-info .founder-avatar image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
}

.founder-info .founder-name {
	padding-left: 20rpx;
}

.founder-info .founder-name .name {
	font-size: 14px;
	color: #333;
}

.founder-info .founder-name .time {
	font-size: 12px;
	color: #999;
}

.founder-concern {
	width: 170rpx;
	height: 60rpx;
	line-height: 60rpx;
	border: 1px solid #ff4444;
	border-radius: 30rpx;
	text-align: center;
	font-size: 14px;
	color: #ff4444;
}

.bookList-name {
	padding: 0 40rpx;
	font-size: 15px;
	color: #333;
	line-height: 85rpx;
}

.bookList-video {
	padding: 0 40rpx;
	height: 370rpx;
	margin-bottom: 59rpx;
}

.bookList-audio {
	padding-left: 40rpx;
	margin-bottom: 36rpx;
}

.bookList-video video {
	width: 100%;
	height: 100%;
}

.bookList-img {
	height: 350rpx;
	padding: 0 40rpx;
	margin-bottom: 59rpx;
}

.bookList-img image {
	width: 100%;
	height: 100%;
}

.bookList-text {
	padding: 0 40rpx;
}

.bookList-text text {
	display: flex;
	line-height: 54rpx;
	font-size: 14px;
	color: #666;
}