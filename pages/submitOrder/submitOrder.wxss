.submitOrder {
	border-top: 1rpx solid #dcdcdc;
}

.submitOrder-address {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 200rpx;
	padding: 0 26rpx;
	margin-bottom: 28rpx;
	background: #fff;
}

.submitOrder-address .address-details {
	font-size: 14px;
	color: #666;
	padding: 0 20rpx;
}

.submitOrder-address .address-details .contacts {
	display: flex;
	justify-content: space-between;
}

.cart-item {
	background: #fff;
	margin-bottom: 20rpx;
}

.cart-item .title {
	height: 59rpx;
	line-height: 59rpx;
	padding-left: 28rpx;
	font-size: 12px;
	color: #999;
	border-bottom: 1rpx solid #dcdcdc;
}

.item-book {
	display: flex;
	justify-content: space-between;
	height: 179rpx;
	padding: 30rpx 28rpx;
	border-bottom: 3rpx solid #ededed;
	background: #fff;
}

.item-book:last-of-type {
	border-bottom: none;
}

.item-book .book-left {
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.book-left .left-image {
	width: 140rpx;
	height: 177rpx;
}

.book-left .left-image image {
	width: 100%;
	height: 100%;
}

.book-left .left-text {
	display: flex;
	flex-direction: column;
	height: 100%;
	padding-left: 20rpx;
	position: relative;
}

.book-left .left-text .name {
	font-size: 14px;
}

.book-left .left-text .work-name {
	font-size: 12px;
	color: #999;
}

.item-book .book-right {
	width: 100%;
	display: flex;
	justify-content: space-between;
	font-size: 14px;
	position: absolute;
	bottom: 0;
}

.item-book .book-right .number {
	color: #999;
	position: absolute;
	right: 0;
}

.bookinfo-bottom {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	height: 88rpx;
	padding: 0 26rpx;
	font-size: 14px;
	color: #999;
}