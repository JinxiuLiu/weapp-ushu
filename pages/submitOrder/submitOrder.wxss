.submitOrder {
	border-top: 1rpx solid #dcdcdc;
	margin-bottom: 108rpx;
}

.submitOrder-address {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 200rpx;
	padding: 0 26rpx;
	margin-bottom: 20rpx;
	background: #fff;
}

.submitOrder-address .address-details {
	font-size: 14px;
	color: #666;
	padding: 0 20rpx;
}

.submitOrder-address .address-details .contacts {
	display: flex;
	justify-content: space-between;
}

.cart-item {
	background: #fff;
}

.cart-item .title {
	height: 59rpx;
	line-height: 59rpx;
	padding-left: 28rpx;
	font-size: 12px;
	color: #999;
	border-bottom: 1rpx solid #dcdcdc;
}

.item-book {
	display: flex;
	justify-content: space-between;
	height: 179rpx;
	padding: 30rpx 28rpx;
	border-bottom: 3rpx solid #ededed;
	background: #fff;
}

.item-book:last-of-type {
	border-bottom: none;
}

.item-book .book-left {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
}

.book-left .left-image {
	width: 140rpx;
	height: 177rpx;
}

.book-left .left-image image {
	width: 100%;
	height: 100%;
}

.book-left .left-text {
	display: flex;
	flex-direction: column;
	height: 100%;
	width:75%;
	position: relative;
}

.book-left .left-text .name {
	font-size: 14px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}

.book-left .left-text .work-name {
	font-size: 12px;
	color: #999;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.item-book .book-right {
	width: 100%;
	display: flex;
	justify-content: space-between;
	font-size: 14px;
	position: absolute;
	bottom: 0;
}

.item-book .book-right .number {
	color: #999;
	position: absolute;
	right: 0;
}

.bookinfo-bottom {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	height: 88rpx;
	padding: 0 26rpx;
	margin-bottom: 20rpx;
	border-top: 1rpx solid #f0f0f0;
	font-size: 14px;
	color: #999;
	background-color: #fff;
}

/* 底部详情 */
.submitOrder-bottom {
	background: #fff;
}

.submitOrder-bottom .bottom-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 86rpx;
	padding: 0 28rpx;
	border-bottom: 1rpx solid #e5e5e5;
	font-size: 14px;
}

.submitOrder-bottom .bottom-item:last-child {
	border-bottom: none;
}

.submitOrder-bottom .bottom-item .wxzf {
	display: flex;
	align-items: center;
}

.submitOrder-bottom .bottom-item image {
	width: 44rpx;
	height: 44rpx;
	padding-right: 14rpx;
}

.submitOrder-bottom .bottom-item .radio {
	display: flex;
	justify-content: space-between;
	width: 100%;
}

/* 底部-提交订单 */
.submitOrder-btn {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	width: 100%;
	height: 88rpx;
	background: #fff;
	border-top: 1rpx solid #f0f0f0;
	position: fixed;
	bottom: 0;
}

.submitOrder-btn .color-red {
	font-weight: bold;
}

.submitOrder-btn .btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 300rpx;
	height: 100%;
	margin-left: 30rpx;
	text-align: center;
	background: #ff4444;
	color: #fff;
}