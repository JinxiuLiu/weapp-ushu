.page {
	border-top: 1rpx solid #dcdcdc;
	background: #fff;
}

.weui-navbar {
	border-bottom: 1rpx solid #dcdcdc;
}

.weui-navbar__item.weui-bar__item_on {
	color: #ff4444;
}

.weui-navbar__item {
	height: 80rpx;
	line-height: 80rpx;
	padding: 0;
}

.weui-navbar__slider {
	background-color: #ff4444;
}

.weui-tab__panel {
	padding-top: 82rpx;
}

.order-item {

}

.order-item .item-top {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 88rpx;
	padding: 0 40rpx;
	font-size: 14px;
}

.order-item .item-top .booklist-name {
	display: block;
	max-width: 70%;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.order-item .item-book {
	display: flex;
	height: 200rpx;
	padding: 12rpx 40rpx;
	background: #fafafa;
}

.order-item .item-book .book-left {
	display: flex;
	align-items: center;
}

.book-left .left-image {
	width: 140rpx;
	height: 177rpx;
}

.book-left .left-image image {
	width: 100%;
	height: 100%;
}

.book-left .left-text {
	display: flex;
	flex-direction: column;
	align-self: baseline;
	max-width:70%;
	padding-left: 20rpx;
	padding-top: 20rpx;
}

.book-left .left-text .name {
	font-size: 14px;
}

.book-left .left-text .work-name {
	font-size: 12px;
	color: #999;
}

.order-item .item-book .book-right {
	display: flex;
	justify-content: flex-end;
	padding-top: 20rpx;
	position: relative;
}

.item-book .book-right .number {
	position: absolute;
	bottom: 8rpx;
}