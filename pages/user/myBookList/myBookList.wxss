.myBookList {
	border-top: 1rpx solid #dcdcdc;
}

.booklist-item {
	background: #fff;
	margin-bottom: 20rpx;
}

.booklist-item .item-top {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 128rpx;
	padding: 0 36rpx;
}

.booklist-item .item-top .item-top-left {
	display: flex;
	flex-direction: column;
	font-size: 16px;
	color: #333;
}

.item-top-left .time {
	font-size: 12px;
	color: #999;
}

.booklist-item .item-bottom {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 88rpx;
	padding: 0 36rpx;
	border-top: 1rpx solid #f0f0f0;
}

.booklist-item .item-bottom .bottom-left,
.booklist-item .item-bottom .bottom-right {
	display: flex;
}

.booklist-item .item-bottom .bottom-right {
	font-size: 14px;
	color: #666;
}

.booklist-item .item-bottom .bottom-right .hot {
	padding-right: 20rpx;
}

.booklist-item .item-bottom .text {
	font-size: 12px;
	color: #666;
	padding-left: 46rpx;
}

.booklist-item .item-bottom .text image {
	width: 36rpx;
	height: 36rpx;
	vertical-align: middle;
	margin-top: -6rpx;
	padding-right: 10rpx;
}