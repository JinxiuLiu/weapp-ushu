.kiting {
	border-top: 1rpx solid #dcdcdc;
	background: #fff;
	padding: 20rpx 30rpx;
	font-size: 14px;
}

.kiting-input {
	display: flex;
	align-items: center;
}

.kiting-input text {
	font-size: 50px;
}

.kiting-input input {
	height: 100rpx;
	font-size: 30px;
	padding-left: 20rpx;
	border-bottom: 1rpx solid #dcdcdc;
}

.kiting-title {
	display: flex;
	justify-content: space-between;
	color: #999;
}

.kiting-title .all {
	color: #ff4444;
}