.page__bd {
    display: flex;
}

.page__bd .weui-search-bar {
    width: 90%;
    padding-right: 0;
}

.page__bd .ranking {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 10%;
}

.ranking image {
    width: 52rpx;
    height: 52rpx;
}

.weui-search-bar {
    padding: 8px 40rpx;
    background-color: #fff;
    border-top: none;
    border-bottom: 1rpx solid #f0f0f0;
}

.weui-search-bar__form {
    background-color: #f0f0f0;
    border: none;
}

.selectBook {
    margin-bottom: 88rpx;
}

.selectBook-list {
    background-color: #fff;
}

.selectBook-list .list-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 145rpx;
    padding: 0 40rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.selectBook-list .list-item:last-child {
    border-bottom: none;
}

.selectBook-list .list-item .name {
    font-size: 14px;
    color: #333;
}

.selectBook-list .list-item .ISBN {
    font-size: 12px;
    color: #999;
}

.book-left {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 90%;
    position: relative;
}

.book-left:after {
    content: " ";
    position: absolute;
    bottom: -30rpx;
    right: -30rpx;
    width: 105%;
    border-top: 1rpx solid #f0f0f0;
    color: #f0f0f0;
}

.bookinfo:last-child .book-left:after {
    content: none;
}

.book-left .left-image {
    width: 140rpx;
    height: 177rpx;
    border: 1rpx solid #f0f0f0;
}

.book-left .left-image image {
    width: 100%;
    height: 100%;
}

.book-left .left-text {
    display: flex;
    flex-direction: column;
    align-self: flex-start;
    width: 72%;
    height: 177rpx;
    position: relative;
}

.book-left .left-text .name {
    font-size: 14px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.book-left .left-text .work-name {
    font-size: 12px;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.book-right {
    display: flex;
    justify-content: space-between;
    width: 100%;
    font-size: 14px;
    margin-top: 10rpx;
    position: absolute;
    bottom: 0;
}

.book-right .number {
    color: #999;
}

.weui-cell {
    padding: 0 20rpx;
}

.weui-cell::before {
    left: 80rpx;
}

.weui-cell__bd {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 180rpx;
    padding: 30rpx;
}

button[type="primary"] {
    width: 100%;
    height: 97rpx;
    line-height: 97rpx;
    margin: 0;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    z-index: 9999;
}