@import 'weui.wxss';

page {
	background: #ececec;
	font-size: 16px;
	color: #333;
}

.color-red {
	color: #ff4444;
}

.marginBottom {
	margin-bottom: 20rpx;
}

button[type="primary"] {
	margin: 28rpx 32rpx 54rpx;
	background-color: #ff4444;
}

.button-hover[type="primary"] {
	color:rgba(255, 255, 255, 0.6);
	background-color: rgba(255, 69, 68, 0.8);
}

/* tab切换栏 */
.page__bd {
	border-top: 1rpx solid #dcdcdc;
	background: #fff;
}

.weui-navbar {
	border-bottom: 1rpx solid #dcdcdc;
}

.weui-navbar__item.weui-bar__item_on {
	color: #ff4444;
}

.weui-navbar__item {
	height: 80rpx;
	line-height: 80rpx;
	padding: 0;
}

.weui-navbar__slider {
	background-color: #ff4444;
}

.weui-tab__panel {
	padding-top: 82rpx;
}
/* tab切换栏END */